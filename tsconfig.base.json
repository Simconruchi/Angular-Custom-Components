{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "custom-button": [
        "dist/custom-button/custom-button",
        "dist/custom-button"
      ],
      "custom-input": [
        "dist/custom-input/custom-input",
        "dist/custom-input"
      ]
    }
  }
}